<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_card_view"
    android:background="#EDEDED"
    android:layout_width="match_parent"
    android:layout_height="55dp">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:background="#EDEDED"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEDED"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:elevation="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="top"
                    android:src="@drawable/search_dev"
                    android:layout_height="30dp"/>
                    <LinearLayout
                        android:background="@drawable/material_curve"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/date_home_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black_overlay"
                            android:textSize="9sp"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/news_item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Internet Connection is not stable"
                            android:textSize="15sp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="13dp"
                            android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>

                   <!-- <TextView
                        android:id="@+id/news_item_desc_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Something went wrong..! Please check your Internet Connection"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:justificationMode="inter_word"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        tools:targetApi="o" />
-->

            </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>

