<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".CustomAuth.CustomSignIn">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_margin="18dp"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="32dp">
        <LinearLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/signin"
            app:lottie_loop="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In with New Account"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/purple_700"
            android:textSize="18sp"
            android:gravity="center" />


            <EditText
                android:id="@+id/editTextTextEmailAddress2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="18dp"
                android:textColor="@color/black"
                android:layout_marginEnd="18sp"
                android:background="@color/light_gray"
                android:hint="Email Id"
                android:paddingStart="14dp"
                android:textColorHint="@color/black_overlay"
                android:ems="10"
                android:inputType="textEmailAddress"
                tools:ignore="RtlSymmetry" />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note: Verify Email before Sign In (you will receive an authentication message in your mail, click the link in the mail for verification)"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:paddingStart="11dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="left"
            tools:ignore="RtlHardcoded,RtlSymmetry" />


            <EditText
                android:id="@+id/editTextTextPassword3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="18dp"
                android:textColor="@color/black"
                android:layout_marginEnd="18sp"
                android:background="@color/light_gray"
                android:hint="password"
                android:paddingStart="14dp"
                android:textColorHint="@color/black_overlay"
                android:ems="10"
                android:inputType="textPassword"
                tools:ignore="RtlSymmetry" />

            <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password? Click Here"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

            android:paddingStart="11dp"
            android:textColor="@color/light_blue_900"
            android:textSize="15sp"
            android:gravity="center"
            tools:ignore="RtlHardcoded,RtlSymmetry" />


                <Button
                    android:id="@+id/sign_In"
                    android:text="Sign In"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/sign_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Have you registered?"
                    android:textColor="@color/black" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>